<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"

    tools:context="com.vijay.newroot.PasswordActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linear1"
        android:background="@drawable/input_outline"
        android:orientation="horizontal"
        android:weightSum="1">
    <EditText
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:layout_weight="0.9"
        android:padding="@dimen/activity_vertical_margin"
        android:background="@android:color/transparent"
        android:hint="Enter old Password"
        android:id="@+id/oldeditText"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />
        <ImageButton
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.1"
            android:id="@+id/toggle_visibility1"
            android:src="@drawable/ic_visibility_black_24dp"
            android:padding="@dimen/activity_horizontal_margin"
            android:background="@android:color/transparent"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1"
        android:id="@+id/linear2"
        android:layout_marginTop="24dp"
        android:layout_below="@+id/linear1"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:background="@drawable/input_outline">
    <EditText
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:layout_weight="0.9"
        android:background="@android:color/transparent"
        android:hint="Enter New Password"
        android:padding="@dimen/activity_vertical_margin"
        android:id="@+id/oldeditText2"
       />
        <ImageButton
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.1"
            android:id="@+id/toggle_visibility2"
            android:src="@drawable/ic_visibility_black_24dp"
            android:padding="@dimen/activity_horizontal_margin"
            android:background="@android:color/transparent"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1"
        android:id="@+id/linear3"
        android:layout_marginTop="24dp"
        android:layout_below="@+id/linear2"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:background="@drawable/input_outline">
        <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:layout_weight="0.9"
            android:background="@android:color/transparent"
            android:hint="ReEnter Password"
            android:padding="@dimen/activity_vertical_margin"
            android:id="@+id/oldeditText3"
            />
        <ImageButton
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.1"
            android:id="@+id/toggle_visibility3"
            android:src="@drawable/ic_visibility_black_24dp"
            android:padding="@dimen/activity_horizontal_margin"
            android:background="@android:color/transparent"/>
    </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Change"
        android:textStyle="bold"
        android:textColor="#fff"
        android:background="@color/buttonColor"
        android:textAllCaps="false"
        android:elevation="@dimen/activity_horizontal_margin"
        android:id="@+id/passwordbutton2"
        android:layout_below="@+id/linear3"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="56dp" />
</RelativeLayout>
